<div class="page-title">
	<h3>District Listing</h3>
	<div class="page-breadcrumb">
		<ol class="breadcrumb">
			<li><a href="<%= root_path %>">Home</a></li>
			<li class="active">District</li>
		</ol>
		
	</div>
</div>
<p id="notice"><%= notice %></p>

<div class="panel panel-white">
	<div class="panel-heading clearfix">
			<h4 class="panel-title">District</h4>
	</div>
	<div class="panel-body">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>District</th>
					<th>District/Taluka</th>
					<th>Code</th>
					<th>is_active</th>
					<th>is_deleted</th>
					<th colspan="5">Operation</th>
				</tr>
			</thead>

			<tbody>
				<% @districts.each do |district| %>
					<tr>
					<td>
					<% if district.parent_id.blank? == false %>
						<%= District.find_by(:id => district.parent_id).name  %>
						<% end %>		
				</td>
						<td><%= district.name %></td>
						<td><%= district.code %></td>
						<td><%= district.is_active %></td>
						<td><%= district.is_deleted %></td>
						
						<td><%= link_to 'Edit', controller: "districts", action: "edit", id: district %></td>
						<td><%= link_to 'Destroy', district, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<% end %>
			</tbody>
    </table>
  </div>
</div>		

