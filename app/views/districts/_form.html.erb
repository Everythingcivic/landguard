<div class="page-title">
	<h3>Add District Details</h3>
	<div class="page-breadcrumb">
		<ol class="breadcrumb">
			<li><a href="<%= root_path %>">Home</a></li>
			<li class="active">AddDistrictTaluka</li>
		</ol>
	</div>
</div>
<div class="col-md-12">
  <div class="panel panel-white">
    <div class="panel-heading clearfix">
      <h4 class="panel-title">District Form</h4>
    </div>
    <div class="panel-body">
			<%= form_for(@district,:html => {:class => "form-horizontal"}) do |f|%>
				<% if @district.errors.any? %>
						<div id="error_explanation">
						<h2><%= pluralize(@district.errors.count, "error") %> prohibited this district from being saved:</h2>
						<ul>
						<% @district.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
						</ul>
					</div>
				<% end %>
				<div class="form-group">
					<%= f.label "Select District" ,:class=>"col-sm-2 control-label" %>
            <div class="col-sm-8">
						<%= f.collection_select :parent_id , @districts, :id , :name , {:prompt => "Please Select"} , :class=>"form-control m-b-sm" %>
            </div>
        </div>
				<div class="form-group">
					<%= f.label :name , :class=>"col-sm-2 control-label" %>
            <div class="col-sm-8">
							<%= f.text_field :name,:class=>"form-control" %>
            </div>
        </div>
				<div class="form-group">
					<%= f.label :code, :class=>"col-sm-2 control-label" %><br>
            <div class="col-sm-8">
							<%= f.text_field :code ,:class=>"form-control" %>
             </div>
        </div>
				<div class="form-group">
          <div class="col-sm-offset-2 col-sm-8">
							<%= f.submit :class=>"btn btn-success" %>
							<%= button_tag "Cancel",:type => 'button',:class => "btn btn-success", :onclick => "location.href = '#{districts_path()}'" %>
					</div>
				</div>		
			<% end %>
    </div>
	</div>
</div>