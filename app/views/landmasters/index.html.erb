<div class="page-title">
	<h3>Landmaster Listing</h3>
	<div class="page-breadcrumb">
		<ol class="breadcrumb">
			<li><a href="<%= root_path %>">Home</a></li>
			<li class="active">Landmaster</li>
		</ol>
		
	</div>
</div>
<div id="main-wrapper">
	<div class="row">
    <div class="panel panel-white">
			<div class="panel-heading clearfix">
					<h4 class="panel-title">Landmaster</h4>
			</div>
			<div class="panel-body">
				<table class="table table-hover">
					<thead>
						<tr>
							<th><%= t("land_type") %></th>
							<th><%= t("district_name") %></th>
							<th><%= t("taluka_name") %></th>
							<th><%= t("village") %></th>
							<th><%= t("survey_number") %></th>
							<th><%= t("survey_area") %></th>
							<th><%= t("FP_number") %></th>
							<th><%= t("TP_number") %></th>
							<th><%= t("FP_area") %></th>
							<th><%= t("FP_shape") %></th>
							<th><%= t("details") %></th>
							<th><%= t("remark") %></th>
							<th><%= t("is_land_allocated") %></th>
							<th colspan="5">Operation</th>
						</tr>
					</thead>

					<tbody>
						<% @landmasters.each do |landmaster| %>
							<tr>
								<td><%= landmaster.land_type %></td>
								<td><%= landmaster.district_name%></td> <!-- to get district name by district id in landmaster  -->
								<td><%= landmaster.taluka_name%></td>   <!-- to get Taluka name by taluka_id in landmaster  -->
								<td><%= landmaster.village %></td>
								<td><%= landmaster.survey_number %></td>
								<td><%= landmaster.survey_area %></td>
								<td><%= landmaster.FP_number %></td>
								<td><%= landmaster.TP_number %></td>
								<td><%= landmaster.FP_area %></td>
								<td><%= landmaster.FP_shape %></td>
								<td><%= landmaster.details %></td>
								<td><%= landmaster.remark %></td>
								<td><%= landmaster.is_land_allocated %></td>
								<td><%= link_to 'Edit', controller: "landmasters", action: "edit", id: landmaster %></td>
								<td><%= link_to 'Destroy', landmaster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>	
		</div>	
	</div>
</div>	

